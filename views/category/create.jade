extends ../layout
    
block content
    h4 #{title}
    hr
    .row
        form.form-horizontal(method="post",action="/category/save")
            if category._id
                input(type="hidden",name="category[_id]",value=category._id)
            .form-group
                label.col-sm-2.control-label(for="name") Name
                .col-sm-10
                    input#name.form-control(name="category[name]",value=category.name)
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type='submit') Create