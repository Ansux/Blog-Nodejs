extends ../layout
block style
    style.
        .center-box{width:400px;margin:200px auto;}
block content
    .center-box
        .panel.panel-default
            .panel-heading 用户登录
            .panel-body
                form.form-horizontal(method='post',action='/account/signin')
                    .form-group
                        label.col-md-2.control-label 账号
                        .col-md-10
                            input.form-control(name='account[uid]')
                    .form-group
                        label.col-md-2.control-label 密码
                        .col-md-10
                            input.form-control(type='password',name='account[upwd]')
                    .form-group
                        .col-md-offset-2.col-md-10
                            button.btn.btn-danger(type='submit') 立即登录